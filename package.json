{
  "name": "notepadclone",
  "version": "1.0.0",
  "description": "A cross-platform Notepad++ alternative built with Electron and Monaco Editor",
  "main": "src/main/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "webpack --mode production",
    "dev": "webpack --mode development && electron .",
    "watch": "webpack --mode development --watch",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.notepadclone.app",
    "productName": "NotepadClone",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/app-icon.png",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/app-icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/app-icon.png",
      "category": "Development"
    },
    "fileAssociations": [
      {
        "ext": "txt",
        "name": "Text File",
        "role": "Editor"
      },
      {
        "ext": "js",
        "name": "JavaScript File",
        "role": "Editor"
      },
      {
        "ext": "ts",
        "name": "TypeScript File",
        "role": "Editor"
      },
      {
        "ext": "py",
        "name": "Python File",
        "role": "Editor"
      },
      {
        "ext": "json",
        "name": "JSON File",
        "role": "Editor"
      },
      {
        "ext": "md",
        "name": "Markdown File",
        "role": "Editor"
      },
      {
        "ext": "html",
        "name": "HTML File",
        "role": "Editor"
      },
      {
        "ext": "css",
        "name": "CSS File",
        "role": "Editor"
      },
      {
        "ext": "xml",
        "name": "XML File",
        "role": "Editor"
      },
      {
        "ext": "yaml",
        "name": "YAML File",
        "role": "Editor"
      },
      {
        "ext": "log",
        "name": "Log File",
        "role": "Editor"
      }
    ]
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "css-loader": "^6.8.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.6.0",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "alasql": "^4.17.0",
    "chardet": "^2.1.1",
    "chokidar": "^3.6.0",
    "dompurify": "^3.3.1",
    "electron-store": "^8.2.0",
    "jspreadsheet-ce": "^5.0.4",
    "markdown-it": "^14.1.0",
    "monaco-editor": "^0.45.0"
  }
}
